---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import HeaderBlog from "../components/HeaderBlog.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import RelatedPosts from "../components/RelatedPosts.astro";
import SosialShareButtons from "../components/SosialShareButtons.astro";


// Add these to your Props
type Props = CollectionEntry<"blog">["data"] & {
  slug: string;
};


// Generate the current page URL
const currentUrl = new URL(Astro.url.pathname, Astro.site);


const { title, description, pubDate, updatedDate, heroImage, category } =
  Astro.props;
import { ClientRouter } from "astro:transitions";

// Handle both string and array types for category
const categories = Array.isArray(category) ? category : [category];
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />

    <style>
      .blog {
        width: 850px;
        max-width: calc(100% - 2em);
        margin: 0 auto;
        padding: 4em 1em;
      }

      .hero-image {
        width: 100%;
        max-width: 1020px;
        margin: 0 auto;
      }

      .hero-image img {
        display: block;
        width: 100%;
        height: auto;
        border-radius: 12px;
        object-fit: cover;
      }

      .prose {
        width: 100%;
        max-width: 750px;
        font-size: 1.2rem;
        margin: 2rem auto;
        color: var(--text-color);
        opacity: 0.9;
      }

      .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
      }

      .tag {
        padding: 0.35rem 0.75rem;
        border-radius: 15px;
        font-size: 0.8rem;
        font-weight: 500;
        background-color: var(--bg-tags);
        color: #718096;
        transition: transform 0.2s ease;
      }

      .tag:hover {
        transform: translateY(-2px);
      }

      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .date {
        margin-bottom: 0.5em;
        color: var(--text-color);
      }
      .last-updated-on {
        font-style: italic;
      }

      .blog-hero {
        background: var(--container-color);
        min-height: 70vh;
        display: flex;
        align-items: center;
        padding: 6rem 1.5rem;
        position: relative;
      }

      .hero-container {
        max-width: 900px;
        margin: 0 auto;
        text-align: center;
      }

      .category-tag {
        display: inline-block;
        background: rgba(255, 255, 255, 0.2);
        color: rgb(255, 255, 255);
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-size: 0.9rem;
        margin-bottom: 2rem;
        font-weight: 500;
        margin-top: 20px;
      }

      .breadcrumb {
  display: flex;
  align-items: center;
  font-size: 1rem;
  margin: 1em 0;
  gap: 0.5rem;
}

.breadcrumb {
    display: flex;
    align-items: center;
    font-size: 1rem;
    margin: 1em 0;
    gap: 0.5rem;
  }

  .breadcrumb a {
    padding: 0.35rem 0.75rem;
    border-radius: 15px;
    font-size: 0.9rem;
    font-weight: 500;
    background-color: var(--bg-tags);
    color: #718096;
    text-decoration: none;
    transition: transform 0.2s ease;
  }

  .breadcrumb a:hover {
    transform: translateY(-2px);
  }

  .separator {
    color: var(--bg-color);
    margin: 0 0.2rem;
  }


      .hero-title {
        font-size: 3.5rem;
        line-height: 1.2;
        margin-bottom: 1.5rem;
        color: var(--text-header);
        font-weight: 800;
      }

      .hero-description {
        font-size: 1.25rem;
        max-width: 700px;
        color: var(--text-color);
        opacity: 0.9;
      }

      .author-section {
        display: flex;
        align-items: center;
        justify-content: left;
        margin-bottom: 2.5rem;
        gap: 1rem;
      }

      .author-image {
        width: 60px;
        height: 60px;
      }

      .author-image img {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid var(--text-color);
      }

      .author-info {
        text-align: left;
      }

      .author-name {
        display: block;
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text-color);
      }

      .author-title {
        font-size: 0.9rem;
        color: var(--text-color);
        opacity: 0.8;
      }

      .date-text {
        font-size: 0.9rem;
        color: var(--text-color);
        opacity: 0.8;
      }

      .stats-section {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 2rem;
        color: var(--text-header);
      }

      .stat-item {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
      }

      .stat-number {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-header);
      }

      .stat-label {
        font-size: 0.9rem;
        color: var(--text-header);
        opacity: 0.8;
      }

      .stat-divider {
        width: 1px;
        height: 40px;
        background: rgba(255, 255, 255, 0.1);
      }

      /* Animations */
      .fade-in {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeIn 0.5s ease forwards;
      }

      @keyframes fadeIn {
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .delay-1 {
        animation-delay: 0.2s;
      }
      .delay-2 {
        animation-delay: 0.4s;
      }
      .delay-3 {
        animation-delay: 0.6s;
      }
      .delay-4 {
        animation-delay: 0.8s;
      }

      /* Responsive Design */
      @media (max-width: 768px) {
        .blog-hero {
          padding: 4rem 1rem;
          min-height: 60vh;
        }

        .title {
          font-size: 0.7rem;
        }

        .hero-description {
          font-size: 1.1rem;
        }

        .stats-section {
          display: flex;
          align-items: center;
          justify-content: center;
          gap: 1.5rem;
        }

        .stat-divider {
          display: none;
        }
        main {
          width: 100%;
          max-width: 100%;
          margin: auto;
          padding: 2em 1em;
        }

        .prose {
          width: 100%;
          max-width: calc(100% - 2em);
          margin: 10px;
          font-size: 1rem;
          padding: 0.8em;
        }
      }

      @media (max-width: 480px) {
        main {
          width: 100%;
          max-width: 100%;
          margin: auto;
          padding: 1em 0em;
        }

        .prose {
          width: 100%;
          max-width: calc(100% - 2em);
          margin-top: 30px;
          font-size: 1rem;
          padding: 0em;
        }
      }



/* Styling untuk elemen artikel Markdown */
.prose {
  /* Sudah ada, tetapi tambahkan properti berikut */
  line-height: 1.8;
  letter-spacing: 0.01em;
  word-spacing: 0.05em;
}

/* Styling untuk heading di dalam artikel */
.prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
  color: var(--text-header);
  margin: 2rem 0 1rem 0;
  line-height: 1.3;
  font-weight: 700;
}

.prose h1 {
  font-size: 2.2rem;
  border-bottom: 2px solid var(--bg-tags);
  padding-bottom: 0.5rem;
}

.prose h2 {
  font-size: 1.8rem;
  border-bottom: 1px solid var(--bg-tags);
  padding-bottom: 0.3rem;
}

.prose h3 {
  font-size: 1.5rem;
}

.prose h4 {
  font-size: 1.3rem;
}

.prose h5 {
  font-size: 1.1rem;
}

.prose h6 {
  font-size: 1rem;
}

/* Styling untuk paragraf */
.prose p {
  margin-bottom: 1.5rem;
}

/* Styling untuk daftar (lists) */
.prose ul, .prose ol {
  margin: 1.5rem 0;
  padding-left: 2rem;
}

.prose li {
  margin-bottom: 0.5rem;
}

.prose ul li {
  list-style-type: disc;
}

.prose ol li {
  list-style-type: decimal;
}

/* Styling untuk blockquote */
.prose blockquote {
  border-left: 4px solid var(--bg-tags);
  padding-left: 1rem;
  margin-left: 0;
  margin-right: 0;
  font-style: italic;
  color: var(--text-color);
  opacity: 0.85;
}

/* Styling untuk gambar */
.prose img {
  max-width: 100%;
  height: auto;
  border-radius: 8px;
  margin: 1.5rem 0;
}

/* Styling untuk kode */
.prose code {
  background-color: var(--bg-tags);
  padding: 0.2em 0.4em;
  border-radius: 3px;
  font-family: 'Monaco', 'Consolas', monospace;
  font-size: 0.9em;
}

.prose pre {
  background-color: var(--bg-tags);
  padding: 1em;
  border-radius: 8px;
  overflow-x: auto;
  margin: 1.5rem 0;
}

.prose pre code {
  background-color: transparent;
  padding: 0;
  border-radius: 0;
  font-size: 0.9em;
}

/* Styling untuk tabel */
.prose table {
  width: 100%;
  border-collapse: collapse;
  margin: 1.5rem 0;
  overflow-x: auto;
  display: block;
}

.prose table th, .prose table td {
  border: 1px solid var(--bg-tags);
  padding: 0.75rem;
  text-align: left;
}

.prose table th {
  background-color: var(--bg-tags);
  font-weight: 600;
}

.prose table tr:nth-child(even) {
  background-color: var(--bg-tags);
  opacity: 0.7;
}

/* Styling untuk horizontal rule */
.prose hr {
  border: 0;
  height: 1px;
  background-color: var(--bg-tags);
  margin: 2rem 0;
}

/* Styling untuk links */
.prose a {
  color: var(--link-color, #3498db);
  text-decoration: none;
  border-bottom: 1px solid transparent;
  transition: border-color 0.2s ease;
}

.prose a:hover {
  border-bottom-color: var(--link-color, #3498db);
}

/* Styling untuk responsive pada artikel */
@media (max-width: 768px) {
  .prose {
    font-size: 1.1rem;
  }
  
  .prose h1 {
    font-size: 1.8rem;
  }
  
  .prose h2 {
    font-size: 1.5rem;
  }
  
  .prose h3 {
    font-size: 1.3rem;
  }
}

@media (max-width: 480px) {
  .prose {
    font-size: 1rem;
  }
  
  .prose h1 {
    font-size: 1.6rem;
  }
  
  .prose h2 {
    font-size: 1.4rem;
  }
  
  .prose h3 {
    font-size: 1.2rem;
  }
  
  .prose ul, .prose ol {
    padding-left: 1.5rem;
  }
}

/* Tambahan untuk memastikan readability */
.prose {
  /* Dark mode adjustment */
  --code-bg: rgba(0, 0, 0, 0.05);
  --blockquote-color: rgba(0, 0, 0, 0.6);
}

[data-theme="dark"] .prose {
  --code-bg: rgba(255, 255, 255, 0.1);
  --blockquote-color: rgba(255, 255, 255, 0.7);
}

/* Tambahan styling untuk caption gambar */
.prose figure {
  margin: 2rem 0;
  text-align: center;
}

.prose figcaption {
  font-size: 0.9rem;
  color: var(--text-color);
  opacity: 0.8;
  margin-top: 0.5rem;
  font-style: italic;
}

/* Styling untuk teks yang disorot */
.prose mark {
  background-color: rgba(255, 230, 0, 0.4);
  padding: 0.1em 0.3em;
  border-radius: 3px;
}

/* Styling untuk catatan kaki */
.prose .footnote {
  font-size: 0.8rem;
  color: var(--text-color);
  opacity: 0.8;
  vertical-align: super;
}

.prose .footnotes {
  border-top: 1px solid var(--bg-tags);
  margin-top: 3rem;
  padding-top: 1rem;
}

.prose .footnotes p {
  font-size: 0.9rem;
}
    </style>
   

   <!-- Schema.org Breadcrumb -->
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Blog",
        "item": `${Astro.site}blog`
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "${categories[0]}",
        "item": `${Astro.site}blog/category/${categories[0].toLowerCase()}`
      },
      {
        "@type": "ListItem",
        "position": 3,
        "name": "${title}",
        "item": `${currentUrl}`
      }
    ]
  }
</script>
      
  </head>

  <body>
    <ClientRouter />
    <HeaderBlog />
    <main>
      <article class="blog">
      

        <nav class="breadcrumb" aria-label="Breadcrumb">
          <a href="/posts">Articles</a> 
          <span class="separator">&gt;</span>
          {categories.map((cat, index) => (
            <>
              <a href={`/posts/category/${cat.toLowerCase()}`}>{cat}</a>
              {index < categories.length - 1 && <span class="separator">&gt;</span>}
            </>
          ))}
        </nav>
        
        
        
        
      
        <div class="title">
          <h1>
            {title}
          </h1>
          <div class="date">
            <p class="hero-description">
              {description}
            </p>
            <hr />
            <br />
            <div class="author-section">
              <div class="author-image">
                <img
                  src="/assets/img/qualita_indonesia_logo.png"
                  alt="Qualita Indonesia"
                />
              </div>
              <div class="author-info">
                <span class="author-name">Admin Qualita</span>
                <span class="author-title"
                  >News, Event & Career</span
                >
                
                <br />
                <span class="date-text"
                  >Update on
                  <FormattedDate date={pubDate} />
                  {
                    updatedDate && (
                      <div class="last-updated-on">
                        Last updated on <FormattedDate date={updatedDate} />
                      </div>
                    )
                  }
                </span>
              </div>
            </div>
          </div>
        </div>
        <div class="hero-image">
          {
            heroImage && (
              <img width={1020} height={510} src={heroImage} alt="" />
            )
          }
        </div>
        <div class="prose">
          <slot />
        

          <div class="tags">
            {categories.map((cat) => <span class="tag">{cat}</span>)}
          </div>
          <br />
          <hr />
          <br />
          <SosialShareButtons title={title} description={description} />
          <RelatedPosts category={category} />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
