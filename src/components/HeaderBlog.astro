---
import ThemeToggle from "./ThemeToggle.astro";
---

<style>
  header {
    position: fixed;
    width: 100%;
    z-index: 1000;
    transition: all 0.5s ease;
  }

  header.transparent {
    background: transparent;
    box-shadow: none;

  }
/*
  header.transparent menu {
    color: var(--text-bar);
  } */

  header.white {
    background: var(--bg-color);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
  }

  .nav-container {
    max-width: 100%;
    margin: 0 auto;
    padding: 1.25rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo a {
    position: relative;
    display: inline-block;
    width: 100px;
    height: 50px;
    overflow: visible;
  }

  .logo-img {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 150px;
    height: auto;
    transform: translate(-50%, -50%);
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .logo-white {
    opacity: 0;
    filter: brightness(0) invert(1);
  }



  .menu ul {
    display: flex;
    gap: 2.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .menu a {
    text-decoration: none;
    color: var(--text-blog);
    font-weight: bold;
    transition: color 0.3s;
    font-size: 1.1rem;
  }

  header.white .menu a {
    color: var(--text-color);
  }

  .navbar-icons {
    display: flex;
    align-items: center;
  }

  .navbar-icons .icon {
    margin-left: 20px;
    font-size: medium;
    background-color: var(--bg-color);
    padding: 2px;
    border-radius: 10px;
  }

  .bar {
    display: block;
    width: 27px;
    height: 6px;
    margin: 3px;
    background-color: var(--text-color);
    transition: 0.3s;
  }

  header.white .bar {
    background-color: var(--text-color);
  }

  .hamburger {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 1001;
    padding: 15px;
  }

  /* Overlay for mobile menu */
  .overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 999;
  }

  .overlay.active {
    display: block;
  }

  /* Dropdown styling */
  .has-dropdown {
    position: relative;
  }

  .has-dropdown .dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    background-color: var(--bg-color);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    min-width: 200px;
    padding: 0;
    z-index: 999;

    /* Animation properties */
    opacity: 0;
    visibility: hidden;
    transform: translateY(10px);
    transition: opacity 0.3s ease, transform 0.3s ease, visibility 0.3s;
    overflow: hidden;
    max-height: 0;
    transition: all 0.3s ease;
  }

  .has-dropdown.open .dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
    max-height: 200px; /* Adjust based on your content */
    padding: 0.5rem 0;
  }

  .dropdown li {
    margin: 0;
    padding: 0;
  }

  .dropdown a {
    padding: 0.75rem 1.5rem;
    display: block;
    color: var(--text-color);
    font-weight: normal;
    font-size: 1rem;
    transition: background 0.2s;
    white-space: nowrap;
  }

  .dropdown a:hover {
    background-color: rgba(0, 0, 0, 0.05);
  }

  /* Style for dropdown toggle indicator */
  .dropdown-toggle {
    display: flex;
    align-items: center;
  }

  .dropdown-toggle::after {
    content: 'â–¼';
    display: inline-block;
    margin-left: 6px;
    font-size: 0.7em;
    transition: transform 0.3s ease;
  }

  .has-dropdown.open .dropdown-toggle::after {
    transform: rotate(180deg);
  }

  @media (max-width: 768px) {
    .hamburger {
      display: block;
    }

    .menu {
      position: fixed;
      top: 0;
      left: -280px;
      height: 100vh;
      width: 280px;
      background: var(--bg-color);
      padding: 2rem;
      transition: left 0.3s ease;
      z-index: 1000;
    }

    header.transparent .menu a {
      color: var(--text-color);
    }

    .menu.active {
      left: 0;
    }

    .menu ul {
      flex-direction: column;
      gap: 1rem;
    }

    .hamburger.active .bar:nth-child(1) {
      transform: rotate(-45deg) translate(-5px, 6px);
    }

    .hamburger.active .bar:nth-child(2) {
      opacity: 0;
    }

    .hamburger.active .bar:nth-child(3) {
      transform: rotate(45deg) translate(-5px, -6px);
    }

    /* Mobile dropdown styles */
    .has-dropdown .dropdown {
      position: static;
      box-shadow: none;
      border-radius: 0;
      background: transparent;
      padding-left: 1rem;
      max-height: 0;
      overflow: hidden;
    }

    .has-dropdown.open .dropdown {
      max-height: 500px;
    }

    .dropdown a {
      padding: 0.5rem 0;
    }
  }

  /* ==== Animated underline for menu & dropdown ==== */
.menu a,
.dropdown a {
  position: relative;
  display: inline-block;         /* biar garis pas selebar teks */
  text-decoration: none;         /* matiin underline default */
  transition: color .25s ease;   /* kamu udah punya ini, gpp double */
}

.menu a::after,
.dropdown a::after {
  content: "";
  position: absolute;
  left: 0;
  bottom: -4px;                  /* jarak garis dari teks (menu utama) */
  width: 100%;
  height: 2px;
  background: currentColor;      /* ikut warna teks */
  transform: scaleX(0);
  transform-origin: left;
  transition: transform .35s ease;
  border-radius: 999px;
}

/* Hover / focus: garis animasi muncul */
.menu a:hover::after,
.menu a:focus-visible::after,
.dropdown a:hover::after,
.dropdown a:focus-visible::after {
  transform: scaleX(1);
}

/* Aktif (opsional): biar halaman aktif tetap underlined
   - pakai salah satu selector ini sesuai kebutuhanmu */
.menu a[aria-current="page"]::after,
.menu a.active::after {
  transform: scaleX(1);
}

/* Penyesuaian khusus item di dropdown biar garisnya di dalam padding */
.dropdown a::after {
  left: 1.5rem;                  /* sama dengan padding-left dropdown a */
  right: 1.5rem;                 /* biar rapi, ganti width -> left/right */
  width: auto;                   /* biar follow left/right */
  bottom: .35rem;                /* sedikit lebih dekat ke teks */
  transition: transform .25s ease;
}

/* Aksesibilitas: nonaktifkan animasi jika user prefer reduced motion */
@media (prefers-reduced-motion: reduce) {
  .menu a::after,
  .dropdown a::after {
    transition: none;
  }
}

</style>


<div class="overlay"></div>
<header class="transparent">
  <div class="nav-container">
    <div class="logo">
      <a href="/">
        <img class="logo-img logo-dark" src="/assets/img/qualita_indonesia_logo.png" alt="Logo" width="50" height="50" />
        <img class="logo-img logo-white" src="/assets/img/qualita_indonesia_logo.png" alt="Logo" width="50" height="50" />
      </a>
    </div>
     <nav class="menu">
      <ul>
        <li><a href="/#">Home</a></li>
        <li><a href="/about/" prefetch>About</a></li>
        <li><a href="/products/" prefetch>Products</a></li>
        <li><a href="/posts/" prefetch>News</a></li>
        <li><a href="/careers/" prefetch>Careers</a></li>
        <li><a href="/contact/" prefetch>Contact Us</a></li>
      </ul>
    </nav>

    <div class="navbar-icons">
      <ThemeToggle />
      <button class="hamburger" aria-label="Menu">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
      </button>
    </div>
  </div>
</header>

<script src="/src/components/js/header.ts"></script>
