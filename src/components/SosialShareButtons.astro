---
// Define props to receive the post URL and title
export interface Props {
  url?: string;  // Optional - will use current URL if not provided
  title?: string;
  description?: string;
}

const {
  url = Astro.url.href,  // Default to current page URL
  title = "Check out this post",
  description = "I found this interesting article"
} = Astro.props;

// Encode the URL and title for sharing
const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);
const encodedDescription = encodeURIComponent(description);

// Generate sharing URLs
const whatsappUrl = `https://wa.me/?text=${encodedTitle}%20${encodedUrl}`;
const facebookUrl = `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`;
const twitterUrl = `https://twitter.com/intent/tweet?url=${encodedUrl}&text=${encodedTitle}`;
---

<div class="social-share">
  <div class="share-header">
    <svg xmlns="https://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="share-icon">
      <circle cx="18" cy="5" r="3"></circle>
      <circle cx="6" cy="12" r="3"></circle>
      <circle cx="18" cy="19" r="3"></circle>
      <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line>
      <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line>
    </svg>
    <span class="share-title">Share post</span>
  </div>
  <div class="share-buttons">
    <!-- WhatsApp Share Button -->
    <a href={whatsappUrl} target="_blank" rel="noopener noreferrer" class="share-button whatsapp" aria-label="Share on WhatsApp">
      <svg xmlns="https://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
      </svg>
    </a>

    <!-- Facebook Share Button -->
    <a href={facebookUrl} target="_blank" rel="noopener noreferrer" class="share-button facebook" aria-label="Share on Facebook">
      <svg xmlns="https://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
        <path d="M9.101 23.691v-7.98H6.627v-3.667h2.474v-1.58c0-4.085 1.848-5.978 5.858-5.978.401 0 .955.042 1.468.103a8.68 8.68 0 0 1 1.141.195v3.325a8.623 8.623 0 0 0-.653-.036 26.805 26.805 0 0 0-.733-.009c-.707 0-1.259.096-1.675.309a1.686 1.686 0 0 0-.679.622c-.258.42-.374.995-.374 1.752v1.297h3.919l-.386 2.103-.287 1.564h-3.246v8.245C19.396 23.238 24 18.179 24 12.044c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.628 3.874 10.35 9.101 11.647Z"/>
      </svg>
    </a>

    <!-- Twitter/X Share Button -->
    <a href={twitterUrl} target="_blank" rel="noopener noreferrer" class="share-button twitter" aria-label="Share on X (Twitter)">
      <svg xmlns="https://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
        <path d="M18.901 1.153h3.68l-8.04 9.19L24 22.846h-7.406l-5.8-7.584-6.638 7.584H.474l8.6-9.83L0 1.154h7.594l5.243 6.932ZM17.61 20.644h2.039L6.486 3.24H4.298Z"/>
      </svg>
    </a>




  </div>
</div>



<style>
  .social-share {
    margin-top: 2rem;
    padding: 1.5rem;
    background-color: var(--bg-color);
    border-radius: 8px;
    text-align: center;
  }

  .share-header {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
    gap: 0.5rem;
  }

  .share-icon {
    color: var(--text-color);
  }

  .share-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-color);
  }

  .share-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    position: relative;
  }

  .share-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 42px;
    height: 42px;
    border-radius: 50%;
    cursor: pointer;
    transition: transform 0.2s ease, background-color 0.2s ease;
    color: white;
  }

  .share-button:hover {
    transform: translateY(-3px);
  }

  .whatsapp {
    background-color: #25D366;
  }

  .facebook {
    background-color: #1877F2;
  }

  .twitter {
    background-color: #000000;
  }



  @media (max-width: 480px) {
    .share-header {
      font-size: 0.9rem;
    }

    .share-icon {
      width: 16px;
      height: 16px;
    }

    .share-title {
      font-size: 0.9rem;
    }

    .share-buttons {
      gap: 0.5rem;
    }

    .share-button {
      width: 36px;
      height: 36px;
    }

    .share-button svg {
      width: 20px;
      height: 20px;
    }
  }
</style>