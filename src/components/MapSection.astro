---
// src/components/Map.astro
const mapEmbedUrl =
  "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d507681.35106797965!2d106.42530017343752!3d-6.2293399999999925!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e698c1ef283f2bb%3A0xca42874adfc9e82f!2sPT%20Qualita%20Indonesia%20(Head%20Office)!5e0!3m2!1sid!2sid!4v1747996077234!5m2!1sid!2sid";
---

<section class="map" id="map">
  <div class="map-container">
    <div class="section-title fade-in">
      <h2>Head Office Location</h2>
     
    </div>

    <div class="map-frame">
      <iframe
        src={mapEmbedUrl}
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
      ></iframe>
    </div>
  </div>
</section>

<style>
  .map {
    padding: 8rem 1rem;
    background: var(--bg-color, #f9fafb);
  }

  .map-container {
    max-width: 900px;
    margin: 0 auto; /* âœ… bikin center seperti Contact */
  }

  .section-title {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--heading-color, #1f2937);
    margin-bottom: 1rem;
  }

  .section-title p {
    color: var(--text-secondary, #6b7280);
    font-size: 1.1rem;
  }

  .map-frame {
    width: 100%;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .map-frame iframe {
    width: 100%;
    height: 400px;
    border: 0;
    display: block;
  }

  @media (max-width: 768px) {
    .map {
      padding: 4rem 1rem;
    }
    .map-frame iframe {
      height: 300px;
    }
  }
</style>
