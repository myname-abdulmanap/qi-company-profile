---
// src/components/Map.astro
const mapEmbedUrl = "https://www.google.com/maps/d/u/4/embed?mid=1S73jlX2v1t3XHMLg79TZhhg8FHwuF3A&ehbc=2E312F";
---

<section class="map" id="map">
  <div class="map-container">
    <div class="section-title fade-in">
      <h2>Head Office & Service Network</h2>
      <p>Our headquarters and extensive technician network with 125+ service locations nationwide, ensuring comprehensive coverage and rapid response times for all your technical needs.</p>
    </div>
    <div class="map-frame">
      <iframe 
        src={mapEmbedUrl} 
        allowfullscreen="" 
        loading="lazy" 
        referrerpolicy="no-referrer-when-downgrade"
      ></iframe>
    </div>
  </div>
</section>

<style>
  .map {
    padding: 8rem 1rem;
    background: var(--bg-color, #f9fafb);
  }

  .map-container {
    max-width: 900px;
    margin: 0 auto; 
  }

  .section-title {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--heading-color, #1f2937);
    margin-bottom: 1rem;
  }

  .section-title p {
    color: var(--text-secondary, #6b7280);
    font-size: 1.1rem;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .map-frame {
    width: 100%;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .map-frame iframe {
    width: 100%;
    height: 500px;
    border: 0;
    display: block;
  }

  @media (max-width: 768px) {
    .map {
      padding: 4rem 1rem;
    }
    
    .section-title h2 {
      font-size: 2rem;
    }
    
    .section-title p {
      font-size: 1rem;
    }
    
    .map-frame iframe {
      height: 300px;
    }
  }
</style>