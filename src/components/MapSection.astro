---
// src/components/Map.astro
const mapEmbedUrl = "https://www.google.com/maps/d/u/4/embed?mid=1S73jlX2v1t3XHMLg79TZhhg8FHwuF3A&ehbc=2E312F";
---

<section class="map" id="map">
  <div class="map-container">
    <!-- Digital Counter Statistics -->
    <div class="stats-section fade-in">
      <div class="stats-container">
        <div class="stat-item">
          <div class="stat-icon">
            <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M3 21V13.5L5 11.5V21H3ZM7 21V9.5L9 7.5V21H7ZM11 21V13.5L13 11.5V21H11ZM15 21V9.5L17 7.5V21H15ZM19 21V5.5L21 3.5V21H19ZM2 7L12 2L22 7V9H2V7Z" fill="url(#warehouse-gradient)"/>
              <defs>
                <linearGradient id="warehouse-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                  <stop offset="0%" style="stop-color:#3b82f6"/>
                  <stop offset="100%" style="stop-color:#1d4ed8"/>
                </linearGradient>
              </defs>
            </svg>
          </div>
          <div class="stat-number-container">
            <span class="stat-number" data-target="50">0</span>
          </div>
          <div class="stat-label">Warehouse</div>
          <div class="stat-description">Strategic storage facilities nationwide</div>
        </div>
        <div class="stat-item">
          <div class="stat-icon">
            <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 12C14.7614 12 17 9.76142 17 7C17 4.23858 14.7614 2 12 2C9.23858 2 7 4.23858 7 7C7 9.76142 9.23858 12 12 12ZM12 14C8.13401 14 1 15.935 1 19.5V22H23V19.5C23 15.935 15.866 14 12 14Z" fill="url(#engineer-gradient)"/>
              <defs>
                <linearGradient id="engineer-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                  <stop offset="0%" style="stop-color:#10b981"/>
                  <stop offset="100%" style="stop-color:#059669"/>
                </linearGradient>
              </defs>
            </svg>
          </div>
          <div class="stat-number-container">
            <span class="stat-number" data-target="500">0</span>
            <span class="stat-plus">+</span>
          </div>
          <div class="stat-label">Field Engineer</div>
          <div class="stat-description">Certified technicians ready to serve</div>
        </div>
        <div class="stat-item">
          <div class="stat-icon">
            <svg width="40" height="40" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 2C8.13 2 5 5.13 5 9C5 14.25 12 22 12 22S19 14.25 19 9C19 5.13 15.87 2 12 2ZM12 11.5C10.62 11.5 9.5 10.38 9.5 9S10.62 6.5 12 6.5 14.5 7.62 14.5 9 13.38 11.5 12 11.5Z" fill="url(#location-gradient)"/>
              <defs>
                <linearGradient id="location-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                  <stop offset="0%" style="stop-color:#f59e0b"/>
                  <stop offset="100%" style="stop-color:#d97706"/>
                </linearGradient>
              </defs>
            </svg>
          </div>
          <div class="stat-number-container">
            <span class="stat-number" data-target="165">0</span>
            <span class="stat-plus">+</span>
          </div>
          <div class="stat-label">Titik Lokasi</div>
          <div class="stat-description">Service points across Indonesia</div>
        </div>
      </div>
    </div>

    <div class="section-title fade-in">
      <h2>Head Office & Service Network</h2>
      <p>Our headquarters and extensive technician network with 125+ service locations nationwide, ensuring comprehensive coverage and rapid response times for all your technical needs.</p>
    </div>
    <div class="map-frame">
      <iframe 
        src={mapEmbedUrl} 
        allowfullscreen="" 
        loading="lazy" 
        referrerpolicy="no-referrer-when-downgrade"
      ></iframe>
    </div>
  </div>
</section>

<style>
  .map {
    padding: 8rem 1rem;
    background: var(--bg-color, #f9fafb);
  }

  .map-container {
    max-width: 900px;
    margin: 0 auto; 
  }

  /* Stats Section Styles */
  .stats-section {
    margin-bottom: 4rem;
  }

  .stats-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .stat-item {
    text-align: center;
    padding: 2.5rem 1.5rem;
    background: white;
    border-radius: 1.5rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    position: relative;
    overflow: hidden;
    transition: all 0.4s ease;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .stat-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #3b82f6, #10b981, #f59e0b);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.6s ease;
  }

  .stat-item:hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.15);
  }

  .stat-item:hover::before {
    transform: scaleX(1);
  }

  .stat-item:hover .stat-icon svg {
    transform: scale(1.1) rotate(5deg);
  }

  .stat-icon {
    margin-bottom: 1.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .stat-icon svg {
    transition: transform 0.3s ease;
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
  }

  .stat-number-container {
    display: flex;
    justify-content: center;
    align-items: baseline;
    margin-bottom: 1rem;
    gap: 0.25rem;
  }

  .stat-number {
    font-size: 3.5rem;
    font-weight: 900;
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    line-height: 1;
    display: inline-block;
    position: relative;
    letter-spacing: -0.02em;
  }

  .stat-plus {
    font-size: 2.5rem;
    font-weight: 900;
    background: linear-gradient(135deg, #10b981, #059669);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: bounce 2s infinite;
    display: inline-block;
    line-height: 1;
  }

  .stat-label {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-secondary, #6b7280);
    text-transform: uppercase;
    letter-spacing: 1.5px;
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .stat-description {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-muted, #9ca3af);
    line-height: 1.4;
    font-style: italic;
    opacity: 0.8;
  }

  .section-title {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-title h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--heading-color, #1f2937);
    margin-bottom: 1rem;
  }

  .section-title p {
    color: var(--text-secondary, #6b7280);
    font-size: 1.1rem;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .map-frame {
    width: 100%;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .map-frame iframe {
    width: 100%;
    height: 500px;
    border: 0;
    display: block;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% { 
      transform: translateY(0) scale(1); 
    }
    40% { 
      transform: translateY(-8px) scale(1.1); 
    }
    60% { 
      transform: translateY(-4px) scale(1.05); 
    }
  }

  @keyframes countUp {
    from { transform: translateY(20px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
  }

  @keyframes iconFloat {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-5px); }
  }

  @media (max-width: 768px) {
    .map {
      padding: 4rem 1rem;
    }
    
    .stats-container {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
    
    .stat-item {
      padding: 2rem 1rem;
    }
    
    .stat-icon svg {
      width: 32px;
      height: 32px;
    }
    
    .stat-number {
      font-size: 2.8rem;
    }
    
    .stat-plus {
      font-size: 2rem;
    }
    
    .section-title h2 {
      font-size: 2rem;
    }
    
    .section-title p {
      font-size: 1rem;
    }
    
    .map-frame iframe {
      height: 300px;
    }
  }

  @media (max-width: 480px) {
    .stats-container {
      gap: 1rem;
    }
    
    .stat-item {
      padding: 1.5rem 1rem;
    }
    
    .stat-icon svg {
      width: 28px;
      height: 28px;
    }
    
    .stat-number {
      font-size: 2.2rem;
    }
    
    .stat-plus {
      font-size: 1.6rem;
    }
    
    .stat-label {
      font-size: 0.95rem;
      letter-spacing: 1px;
    }
    
    .stat-description {
      font-size: 0.85rem;
    }
  }
</style>

<script>
  // Counter Animation Function
  function animateCounter(element, target, duration = 2000) {
    let current = 0;
    const increment = target / (duration / 16); // 60 FPS
    const timer = setInterval(() => {
      current += increment;
      if (current >= target) {
        element.textContent = target;
        clearInterval(timer);
      } else {
        element.textContent = Math.floor(current);
      }
    }, 16);
  }

  // Intersection Observer for triggering animations
  function initCounters() {
    const observerOptions = {
      threshold: 0.5,
      rootMargin: '0px 0px -100px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const statsNumbers = entry.target.querySelectorAll('.stat-number');
          statsNumbers.forEach(numberEl => {
            const target = parseInt(numberEl.dataset.target);
            animateCounter(numberEl, target);
          });
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    // Start observing
    const statsSection = document.querySelector('.stats-section');
    if (statsSection) {
      observer.observe(statsSection);
    }
  }

  // Initialize counters on page load
  function initialize() {
    initCounters();
  }

  // Handle both normal page loads and Astro view transitions
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initialize);
  } else {
    initialize();
  }

  // Re-initialize on Astro view transitions
  document.addEventListener('astro:page-load', initialize);
  document.addEventListener('astro:after-swap', initialize);
</script>