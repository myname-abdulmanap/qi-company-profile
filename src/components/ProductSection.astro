<section class="products-section">
  <div class="container">
    <div class="products-header">
      <h2 class="animate-element fade-up">
        Our Products<span class="line-animated"></span>
      </h2>
      <p class="animate-element fade-up">
        Innovative solutions designed to enhance field service management and secure IoT
        environments
      </p>
    </div>

    <div class="products-layout">
      <div class="products-grid">
        <div class="product-card animate-element fade-in-right">
          <div class="product-icon">
            <img src="/assets/img/qifess-logo.png" />
          </div>
          <div class="product-content">
            <h3>Qifess</h3>
            <p class="product-description">
              Comprehensive field service management solution that streamlines operations, optimizes
              resource allocation, and enhances customer satisfaction through real-time tracking and
              automated workflows.
            </p>
            <div class="product-features">
              <span class="feature-tag">Real-time Tracking</span>
              <span class="feature-tag">Work Order Management</span>
              <span class="feature-tag">Cloud Platform</span>
              <span class="feature-tag">Analytics Dashboard</span>
            </div>
            <div class="product-actions">
              <a href="https://qifess.com" class="btn-primary">Learn More</a>
              <a href="https://qifess.com/contact-us" class="btn-secondary">Try Demo</a>
            </div>
          </div>
        </div>

        <div class="product-card animate-element fade-in-left">
          <div class="product-icon">
            <img src="/assets/img/protectqube-logo.png" />
          </div>
          <div class="product-content">
            <h3>ProtectQube</h3>
            <p class="product-description">
              Advanced IoT security solution specifically designed for ATM environments, providing
              comprehensive monitoring, threat detection, and automated response capabilities to
              protect financial infrastructure.
            </p>
            <div class="product-features">
              <span class="feature-tag">24/7 Monitoring</span>
              <span class="feature-tag">Threat Detection</span>
              <span class="feature-tag">IoT Security</span>
              <span class="feature-tag">Real-time Alerts</span>
            </div>
            <div class="product-actions">
             <a href="https://protectqube.com" class="btn-primary">Learn More</a>
              <a href="https://protectqube.com/contact-us" class="btn-secondary">Consultasion</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

