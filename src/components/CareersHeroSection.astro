<section class="career-hero">
  <div class="career-container">
    <div class="career-content">
      <!-- Career Text -->
      <div class="career-text fade-in delay-1">
        <h1 class="career-title">Explore career opportunities, growth insights, and professional development</h1>
        <p class="career-description fade-in delay-2">
          We’re looking for passionate and talented individuals who are eager to
          grow, innovate, and make a difference. Whether you’re just starting
          your journey or looking to take your career to the next level, we
          provide the right environment, mentorship, and opportunities to help
          you succeed.
        </p>
      </div>

      <!-- Career Image (Lottie) -->
      <div class="career-image fade-in delay-3">
        <dotlottie-wc
          src="https://lottie.host/2e3a9a64-0285-4b24-afab-7e18f29023d6/eKsCasfBME.lottie"
          style="width: 320px; height: 320px"
          speed="1"
          autoplay
          loop
        >
        </dotlottie-wc>
      </div>
    </div>
  </div>
</section>

<script
  src="https://unpkg.com/@lottiefiles/dotlottie-wc@0.6.2/dist/dotlottie-wc.js"
  type="module"></script>

<style>
  .career-hero {
    background: var(--container-color);
    min-height: 80vh;
    display: flex;
    align-items: flex-start; 
    padding: 6rem 1.5rem 4rem; 
    position: relative;
    overflow: hidden;
  }

  .career-container {
    max-width: 1000px;
    width: 100%;
    margin: 0 auto;
    color: var(--text-header);
    position: relative;
    z-index: 1;
  }

  .career-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    margin-top: 2rem; /* tambahan jarak turun */
  }

  .career-text {
    flex: 1;
    text-align: left;
  }

  .career-title {
    font-size: 2rem; /* lebih kecil dari sebelumnya */
    line-height: 1.3;
    margin-bottom: 1rem;
    font-weight: 700; /* lebih ringan */
    color: var(--text-header);
  }

  .career-description {
    font-size: 1rem; /* lebih kecil */
    max-width: 550px;
    margin-bottom: 1.5rem;
    line-height: 1.6;
    opacity: 0.85;
    font-weight: 400;
  }

  .career-image {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* Responsive */
  @media (max-width: 992px) {
    .career-content {
      flex-direction: column;
      text-align: center;
      margin-top: 3rem;
    }
    .career-description {
      margin: 0 auto 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .career-title {
      font-size: 1.6rem;
    }
    .career-description {
      font-size: 0.95rem;
    }
  }
</style>
