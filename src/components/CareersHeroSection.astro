            <path d="m21 21-4.35-4.35"></path>
          </svg>
        </button>
      </div>
    </div>

    <div id="careers-container" class="careers-grid">
      <!-- Career cards will be dynamically inserted here -->
    </div>

    <div id="pagination" class="pagination">
      <!-- Pagination buttons will be dynamically inserted here -->
    </div>
  </div>
</section>

<script>
  let currentPage = 1;
  const itemsPerPage = 6;
  let careersData = []; // Your careers data will go here
  let filteredData = []; // Filtered careers data
  let totalPages = 1;

  function renderCareers() {
    const dataToRender = filteredData.length > 0 ? filteredData : careersData;
    if (!dataToRender.length) return;

    totalPages = Math.ceil(dataToRender.length / itemsPerPage);
    const startIndex = (currentPage - 1) * itemsPerPage;
    const endIndex = startIndex + itemsPerPage;
    const currentCareers = dataToRender.slice(startIndex, endIndex);

    const careersContainer = document.getElementById('careers-container');
    careersContainer.innerHTML = '';

    currentCareers.forEach((career) => {
      const careerCard = document.createElement('div');
      careerCard.className = 'career-card fade-in';
      careerCard.innerHTML = `
      <div class="career-header">
        <h3 class="career-title">${career.title}</h3>
        <span class="career-type">${career.type}</span>
      </div>
      <div class="career-details">
        <span class="career-department">${career.department}</span>
        <span class="career-location">${career.location}</span>
      </div>
      <button class="apply-btn" onclick="applyForJob(${career.id})">Apply</button>
    `;
      careersContainer.appendChild(careerCard);
    });

    renderPagination();
  }

  function performSearch() {
    const searchTerm = document.getElementById('search-input').value.toLowerCase().trim();

    if (!searchTerm) {
      filteredData = [];
    } else {
      filteredData = careersData.filter(
        (career) =>
          career.title.toLowerCase().includes(searchTerm) ||
          career.department.toLowerCase().includes(searchTerm) ||
          career.location.toLowerCase().includes(searchTerm),
      );
    }

    currentPage = 1;
    renderCareers();
  }

  function renderPagination() {
    const paginationContainer = document.getElementById('pagination');
    paginationContainer.innerHTML = '';

    if (totalPages <= 1) return;

    // Previous button
    const prevBtn = document.createElement('button');
    prevBtn.className = `pagination-btn ${currentPage === 1 ? 'disabled' : ''}`;
    prevBtn.innerHTML = '&larr;';
    prevBtn.onclick = () => {
      if (currentPage > 1) {
        currentPage--;
        renderCareers();
      }
    };
    paginationContainer.appendChild(prevBtn);

    // Page numbers
    for (let i = 1; i <= totalPages; i++) {
      const pageBtn = document.createElement('button');
      pageBtn.className = `pagination-btn ${i === currentPage ? 'active' : ''}`;
      pageBtn.textContent = i;
      pageBtn.onclick = () => {
        currentPage = i;
        renderCareers();
      };
      paginationContainer.appendChild(pageBtn);
    }

    // Next button
    const nextBtn = document.createElement('button');
    nextBtn.className = `pagination-btn ${currentPage === totalPages ? 'disabled' : ''}`;
    nextBtn.innerHTML = '&rarr;';
    nextBtn.onclick = () => {
      if (currentPage < totalPages) {
        currentPage++;
        renderCareers();
      }
    };
    paginationContainer.appendChild(nextBtn);
  }

  // Function to load careers data - replace this with your API call
  function loadCareersData(data) {
    careersData = data;
    filteredData = [];
    currentPage = 1;
    renderCareers();
  }

  // Function to handle job application - customize as needed
  function applyForJob(jobId) {
    // Your apply logic here
    console.log('Apply for job ID:', jobId);
  }

  // Initialize when page loads
  document.addEventListener('DOMContentLoaded', function () {
    // Call your API or load data here
    // loadCareersData(yourDataArray);

    // Add real-time search functionality
    const searchInput = document.getElementById('search-input');
    searchInput.addEventListener('input', function () {
      performSearch();
    });

    // Add enter key support for search
    searchInput.addEventListener('keypress', function (e) {
      if (e.key === 'Enter') {
        performSearch();
      }
    });
  });
</script>

