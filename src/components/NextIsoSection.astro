<style>
  .services-section {
    padding: 6rem 0;
    background: var(--service-container);
    position: relative;
    overflow: hidden;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    position: relative;
    z-index: 2;
  }

  .services-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .services-header h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--heading-color);
    margin-bottom: 1rem;
    position: relative;
    display: inline-block;
  }

  .services-header h2::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 3px;
    background: linear-gradient(to right, #4338ca, #ec4899);
    border-radius: 3px;
    transition: width 0.8s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .services-header h2.animate::after {
    width: 80px;
  }

  .services-header p {
    max-width: 36rem;
    margin: 1.5rem auto 0;
    color: var(--text-secondary, #6b7280);
    font-size: 1.1rem;
    line-height: 1.6;
  }

  .services-layout {
    display: flex;
    gap: 3rem;
    align-items: center;
    justify-content: space-between;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    flex: 1;
  }

  .service-card {
    background: var(--color-card, white);
    padding: 1.75rem;
    border-radius: 1rem;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.05);
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    display: flex;
    align-items: flex-start;
    gap: 1.25rem;
    position: relative;
    overflow: hidden;
    border: 1px solid rgba(0, 0, 0, 0.04);
    will-change: transform;
  }

  .service-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 0;
    background: var(--icon-color, #4338ca);
    transition: height 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .service-card.card-hover {
    transform: translateY(-8px) scale(1.02);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
  }

  .service-card.card-hover::before {
    height: 100%;
  }

  .service-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    border-radius: 16px;
    margin-right: 1.25rem;
    color: white;
    flex-shrink: 0;
    position: relative;
    z-index: 1;
    box-shadow: 0 8px 20px -4px rgba(0, 0, 0, 0.1);
    transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .card-hover .service-icon {
    transform: scale(1.1);
  }

  .service-icon svg {
    filter: drop-shadow(0 2px 2px rgba(0, 0, 0, 0.1));
    transition: transform 0.3s ease;
  }

  .card-hover .service-icon svg {
    transform: scale(1.1);
  }

  .service-icon.red {
    background: linear-gradient(135deg, #ff6b6b, #ee5253);
  }

  .service-icon.blue {
    background: linear-gradient(135deg, #48a0f9, #3b82f6);
  }

  .service-icon.yellow {
    background: linear-gradient(135deg, #feca57, #f59e0b);
  }

  .service-content {
    flex: 1;
  }

  .service-content h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--heading-color, #1f2937);
    margin-bottom: 0.75rem;
    transition:
      color 0.3s ease,
      transform 0.3s ease;
  }

  .card-hover .service-content h3 {
    color: #4338ca;
    transform: translateX(5px);
  }

  .service-content p {
    color: var(--text-body, #6b7280);
    font-size: 1rem;
    line-height: 1.6;
    transition: transform 0.3s ease;
  }

  .card-hover .service-content p {
    transform: translateX(5px);
  }

  .lottie-container {
    width: 400px;
    height: 400px;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
    animation: float 6s ease-in-out infinite;
  }

  .lottie-container::before {
    content: '';
    position: absolute;
    width: 200px;
    height: 200px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.1) 0%, rgba(59, 130, 246, 0) 70%);
    z-index: -1;
    animation: pulse 3s infinite;
  }

  dotlottie-player {
    width: 100%;
    height: 100%;
    filter: drop-shadow(0 15px 15px rgba(0, 0, 0, 0.08));
  }

  /* Animation Keyframes */
  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-15px);
    }
  }

  @keyframes pulse {
    0% {
      transform: scale(0.95);
      opacity: 0.7;
    }
    50% {
      transform: scale(1.05);
      opacity: 0.9;
    }
    100% {
      transform: scale(0.95);
      opacity: 0.7;
    }
  }

  /* Entrance Animations */
  .animate-element {
    opacity: 0;
    transform: translateY(30px);
    transition:
      opacity 0.6s ease-out,
      transform 0.6s ease-out;
  }

  .animate-element.animate {
    opacity: 1;
    transform: translateY(0);
  }

  .fade-up {
    transform: translateY(50px);
  }

  .fade-in-right {
    transform: translateX(-50px);
  }

  .fade-in-left {
    transform: translateX(50px);
  }

  /* Staggered animations for service cards */
  .service-card:nth-child(1).animate {
    transition-delay: 0.1s;
  }
  .service-card:nth-child(2).animate {
    transition-delay: 0.2s;
  }
  .service-card:nth-child(3).animate {
    transition-delay: 0.3s;
  }
  .service-card:nth-child(4).animate {
    transition-delay: 0.4s;
  }
  .service-card:nth-child(5).animate {
    transition-delay: 0.5s;
  }

  /* Exit animation with fade-out */
  .exit {
    opacity: 0;
    transition:
      opacity 0.5s ease,
      transform 0.5s ease;
  }

  /* Responsive styles */
  @media (max-width: 1100px) {
    .services-layout {
      flex-direction: column;
    }

    .lottie-container {
      order: -1;
      margin-bottom: 3rem;
      width: 350px;
      height: 350px;
    }
  }

  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
    }

    .services-header h2 {
      font-size: 2rem;
    }

    .lottie-container {
      width: 300px;
      height: 300px;
    }
  }

  @media (max-width: 480px) {
    .service-card {
      flex-direction: column;
      align-items: flex-start;
    }

    .service-icon {
      margin-right: 0;
      margin-bottom: 1rem;
    }

    .lottie-container {
      width: 250px;
      height: 250px;
    }
  }
</style>
