---
// RelatedJobs.astro
import { getCollection } from 'astro:content';
import FormattedDate from './FormattedDate.astro';

export interface Props {
  category: string | string[];
}

const { category } = Astro.props;

// Ambil slug saat ini dari URL
const currentPath = Astro.url.pathname;
const currentSlug = currentPath.split('/').filter(Boolean).pop();

// Normalisasi kategori input jadi array
const categories = (Array.isArray(category) ? category : [category]).filter(Boolean);

// Ambil semua post (ganti 'blog' ke koleksi kamu bila perlu, mis. 'careers')
const allPosts = await getCollection('blog');

// Filter related posts:
// - Bukan post saat ini
// - Status harus 'published' (case-insensitive)
// - Ada kategori yang match (case-insensitive)
const relatedPosts = allPosts
  .filter((post) => {
    // Skip current
    if (post.data.slug === currentSlug) return false;

    // Hanya published
    const status = String(post.data.status ?? '').toLowerCase();
    if (status !== 'published') return false;

    // Match kategori
    const postCats = Array.isArray(post.data.category)
      ? post.data.category
      : [post.data.category];

    const hasCategoryMatch =
      categories.length > 0 &&
      categories.some((cat) =>
        postCats.some((pc) => pc?.toLowerCase?.() === cat?.toLowerCase?.())
      );

    return hasCategoryMatch;
  })
  // Urutkan terbaru dulu
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  // Ambil 3 teratas
  .slice(0, 3);
---

{relatedPosts.length > 0 && (
  <div class="related-posts">
    <h3 class="related-posts-title">Related Jobs</h3>
    <div class="related-posts-container">
      {relatedPosts.map((post) => (
        <a href={`/careers/${post.data.slug}`} class="related-post-card">
          {post.data.heroImage && (
            <div class="related-post-image">
              <img src={post.data.heroImage} alt={post.data.title} loading="lazy" />
            </div>
          )}
          <div class="related-post-content">
            <h4 class="related-post-title">{post.data.title}</h4>
            <p class="related-post-date">
              <FormattedDate date={post.data.pubDate} />
            </p>
          </div>
        </a>
      ))}
    </div>
  </div>
)}

<style>
  .related-posts {
    margin-top: 3rem;
    margin-bottom: 1.5rem;
  }

  .related-posts-title {
    font-size: 1.4rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--text-color);
  }

  .related-posts-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  .related-post-card {
    display: flex;
    flex-direction: column;
    background-color: var(--bg-color);
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    text-decoration: none;
    height: 100%;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
  }

  .related-post-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
  }

  .related-post-image {
    height: 120px;
    overflow: hidden;
  }

  .related-post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.2s ease;
  }

  .related-post-card:hover .related-post-image img {
    transform: scale(1.03);
  }

  .related-post-content {
    padding: 0.85rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .related-post-title {
    font-size: 0.95rem;
    font-weight: 600;
    margin-bottom: 0.35rem;
    color: var(--text-color);
    line-height: 1.3;
  }

  .related-post-date {
    font-size: 0.75rem;
    color: var(--text-color);
    opacity: 0.8;
    margin: 0;
  }

  @media (max-width: 768px) {
    .related-posts-container {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.8rem;
    }
    .related-post-image {
      height: 110px;
    }
  }

  @media (max-width: 480px) {
    .related-posts-container {
      grid-template-columns: 1fr;
    }
    .related-post-image {
      height: 130px;
    }
    .related-posts-title {
      font-size: 1.2rem;
      margin-bottom: 0.75rem;
    }
  }
</style>
