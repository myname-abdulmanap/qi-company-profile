        if (years > 0) {
          periodText += `${years} year${years > 1 ? 's' : ''}`;
          if (remainingMonths > 0) {
            periodText += ` ${remainingMonths} month${remainingMonths > 1 ? 's' : ''}`;
          }
        } else {
          periodText += `${remainingMonths} month${remainingMonths > 1 ? 's' : ''}`;
