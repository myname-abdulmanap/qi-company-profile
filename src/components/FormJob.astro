  validateFile(input) {
    const file = input.files[0];
    if (!file) return true;

    const maxSize = input.id === 'cv' ? 5 * 1024 * 1024 : 2 * 1024 * 1024;
    
    if (file.size > maxSize) {
      this.showStatus(`File "${file.name}" too large. Maximum size: ${maxSize / (1024 * 1024)}MB`, 'error');
      input.value = '';
      return false;
    }

    return true;
  }

