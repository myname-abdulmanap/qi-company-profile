---
/**
 * src/components/BaseHead.astro
 * Komponen head global + SEO meta (OG/Twitter) dengan dukungan featured image.
 */

// Import CSS global agar diinject di semua halaman via BaseHead
import '../styles/global.css';
import { SITE_TITLE } from '../consts';

interface Props {
  title: string;
  description: string;
  /** Featured image untuk share (relative path atau absolute URL) */
  image?: string;
  /** OG type: "website" (default) atau "article" untuk halaman post */
  type?: 'website' | 'article';
  /** ISO datetime untuk artikel */
  publishedTime?: string | Date;
  modifiedTime?: string | Date;
  /** (Opsional) canonical override */
  canonical?: string;
}

const {
  title,
  description,
  image = '/assets/img/banner.jpg', // fallback global
  type = 'website',
  publishedTime,
  modifiedTime,
  canonical
} = Astro.props;

// URL kanonik absolut
const canonicalURL = canonical
  ? new URL(canonical, Astro.site)
  : new URL(Astro.url.pathname, Astro.site);

// Pastikan OG/Twitter image absolut:
// - Jika `image` sudah absolute (http/https), gunakan langsung
// - Jika relatif (/path.jpg), gabungkan dengan Astro.site
const isAbsolute = typeof image === 'string' && /^https?:\/\//i.test(image);
const ogImageURL = isAbsolute ? image : new URL(image, Astro.site).toString();

// OG:url wajib absolut (pakai canonicalURL)
const ogUrl = canonicalURL.toString();

// Helper: normalisasi waktu ke ISO string
const toISO = (d: string | Date | undefined) =>
  d ? (typeof d === 'string' ? new Date(d).toISOString() : new Date(d).toISOString()) : undefined;
const articlePublished = toISO(publishedTime);
const articleModified = toISO(modifiedTime);
---
<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
  rel="alternate"
  type="application/rss+xml"
  title={SITE_TITLE}
  href={new URL('rss.xml', Astro.site)}
/>
<meta name="generator" content={Astro.generator} />

<!-- Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&family=Quicksand:wght@300..700&display=swap"
  rel="stylesheet"
/>

<!-- Canonical -->
<link rel="canonical" href={ogUrl} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph -->
<meta property="og:type" content={type} />
<meta property="og:url" content={ogUrl} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImageURL} />
<meta property="og:locale" content="id_ID" />
<!-- (Opsional) kamu bisa tambahkan og:image:width/height kalau tahu dimensinya -->

<!-- Article meta kalau type=article -->
{type === 'article' && articlePublished && <meta property="article:published_time" content={articlePublished} />}
{type === 'article' && articleModified && <meta property="article:modified_time" content={articleModified} />}

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={ogUrl} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImageURL} />

<!-- Target Indonesian Audience -->
<link rel="alternate" href="https://qualita-indonesia.com" hreflang="id-ID" />
<meta name="geo.region" content="ID" />
<meta name="geo.placename" content="Indonesia" />

<!-- Analytics (sesuaikan kebutuhan) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-JSBYE83QE3"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());
  gtag('config', 'G-JSBYE83QE3');
</script>
<script defer data-domain="qualita-indonesia.com" src="https://plausible.io/js/script.js"></script>
<script defer data-domain="qualita-indonesia.com" src="https://analytics.qualita-indonesia.web.id/js/script.file-downloads.hash.outbound-links.pageview-props.revenue.tagged-events.js"></script>
